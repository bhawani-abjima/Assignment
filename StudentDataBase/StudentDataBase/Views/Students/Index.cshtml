@model IEnumerable<StudentDataBase.Entities.StudentDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create"><button type="button" class="btn btn-outline-success">CREATE NEW</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Roll_No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact_No)
            </th>
            
            
        </tr>
    </thead>
      <tbody>
@foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Roll_No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family_Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact_No)
            </td>
            
            <td></td>

            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-primary">Edit</button></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-warning">Details</button></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-danger">Delete !!</button></a>
            </td>
        </tr>
        }
    </tbody>
</table>
