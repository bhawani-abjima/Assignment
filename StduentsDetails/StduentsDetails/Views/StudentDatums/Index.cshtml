@model IEnumerable< StudentsDetails.Entities.StudentDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create"><button type="button" class="btn btn-outline-success">CREATE NEW</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                  @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                  @Html.DisplayNameFor(model => model.RollNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamilyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RollNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-outline-primary">Edit</button></a>
                <a asp-action="Details" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-outline-warning">Details</button></a>
                <a asp-action="Delete" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-outline-danger">Delete</button></a>
                    
            </td>
        </tr>
}
    </tbody>
</table>
